doctype html
html
  head
    meta(name='viewport', content='width=device-width, initial-scale=1')
    style.
      body{
      background-color: #52b1ea;
      }
      p#felicidades1 {
      text-align: center;
      font-size: 100px;
      margin-top: 0px;
      color: #fff;
      text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;
      }
      p#felicidades2 {
      text-align: center;
      font-size: 80px;
      margin-top: 0px;
      color: #fff;
      text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;
      }
      p#numSolved {
      text-align: center;
      font-size: 50px;
      margin-top: 0px;
      color: #fff;
      text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;
      }

  body
    p#felicidades1 ¡Ganadores #{teamName}!
    p#felicidades2 ¡Felicidades #{members}!
    p#numSolved Problemas resueltos: #{score.num_solved}/#{problems.length}